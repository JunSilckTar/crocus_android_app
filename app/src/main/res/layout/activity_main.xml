<?xml version="1.0" encoding="utf-8"?><!--suppress ALL -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E67399"
    android:orientation="vertical"
    tools:context="com.haibin.calendarviewproject.MainActivity"
    tools:ignore="RtlHardcoded,HardcodedText,RtlSymmetry,SmallSp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingTop="50dp"
            android:text="@string/app_name"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:textStyle="bold">

        </TextView>
    </LinearLayout>


    <com.haibin.calendarview.CalendarLayout
        android:id="@+id/calendarLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:default_status="shrink"
        app:calendar_content_view_id="@+id/nestedScrollView"
        app:calendar_show_mode="both_month_week_view">

        <com.haibin.calendarview.CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E67399"
            app:day_text_size="20sp"
            app:calendar_height="50dp"
            app:calendar_padding_left="10dp"
            app:calendar_padding_right="10dp"
            app:current_day_lunar_text_color="#ffffff"
            app:current_day_text_color="#ffffff"
            app:lunar_text_size="10sp"
            app:max_year="2050"
            app:max_year_day="31"
            app:max_year_month="12"
            app:min_year="2020"
            app:min_year_day="1"
            app:min_year_month="5"
            app:month_view="com.haibin.calendarviewproject.base.Canvas.reMonthView"
            app:month_view_show_mode="mode_only_current"
            app:month_view_scrollable="true"
            app:week_view_scrollable="true"
            app:other_month_lunar_text_color="#CFCFCF"
            app:other_month_text_color="#CFCECE"
            app:scheme_lunar_text_color="#CFCFCF"
            app:scheme_text_color="#333"
            app:selected_lunar_text_color="#E67399"
            app:selected_text_color="#E67399"
            app:selected_theme_color="#FFFFFF"
            app:week_bar_height="46dp"
            app:week_bar_view="com.haibin.calendarviewproject.base.Canvas.reWeekBar"
            app:week_start_with="sun"
            app:week_text_size="10sp"
            app:week_view="com.haibin.calendarviewproject.base.Canvas.reWeekView" />
            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="680dp"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="30dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:minHeight="44dp"
                        android:layout_margin="20dp"
                        app:cardBackgroundColor="#F5F4F4"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="提示框和搜索框在此！"
                            android:textColor="#F08AAB"
                            android:textSize="15sp"
                            android:layout_gravity="left|center"
                            android:paddingLeft="10dp">
                        </TextView>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:minHeight="60dp"
                        app:cardBackgroundColor="#E67399"
                        app:cardCornerRadius="30dp"
                        android:layout_gravity="center"
                        app:cardElevation="0dp"
                        android:layout_marginLeft="10dp">

                    </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ll_range"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="100dp"
                        android:contentDescription="flyme"
                        android:src="@mipmap/ic_launcher_round" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="这个image按钮跳转日历选择器activity"
                        android:textSize="20sp"
                        android:layout_marginStart="80dp"
                        android:layout_marginTop="100dp">

                    </TextView>
                </androidx.cardview.widget.CardView>
            </androidx.core.widget.NestedScrollView>
    </com.haibin.calendarview.CalendarLayout>


</LinearLayout>
